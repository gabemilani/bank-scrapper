
@{
    ViewBag.Title = "Busca";
}

@section NavBarItems {
    <li class="nav-item active">
        @Html.ActionLink("Busca", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
    </li>
    <li class="nav-item">
        @Html.ActionLink("Resultados", "Index", "Results", new { area = "" }, new { @class = "nav-link" })
    </li>
}

<div class="jumbotron">
    <h1 class="display-4">Buscar dados dos bancos!</h1>
    <p class="lead">Essa é uma aplicação simples que buscará os dados da sua conta no banco selecionado.</p>
</div>

<form>
    <div class="form-group">
        <label for="bankSelect">Banco</label>
        <select class="form-control" id="bankSelect">
            <option>Selecione</option>
            <option value="2">Nubank</option>
            <option value="1">Banco do Brasil</option>
        </select>
    </div>

    <div id="nubank-form">
        <div class="form-group">
            <label for="inputCpf">CPF</label>
            <input type="text" class="form-control" id="inputCpf" placeholder="Escreva o CPF da sua conta">            
        </div>
        <div class="form-group">
            <label for="inputPassword">Senha</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Escreva a senha da sua conta">
            <small id="passwordHelp" class="form-text text-muted">Sua senha só será utilizada para buscarmos as informações do Nubank</small>
        </div>
    </div>

    <div id="bb-form">
        <div class="form-group">
            <label for="inputAgency">Número da Agência</label>
            <input type="text" class="form-control" id="inputAgency" placeholder="Escreva a agência da sua conta">
        </div>
        <div class="form-group">
            <label for="inputNumber">Número da Conta</label>
            <input type="text" class="form-control" id="inputNumber" placeholder="Escreva o número da sua conta">
        </div>
        <div class="form-group">
            <label for="inputElectronicPassword">Senha Eletrônica</label>
            <input type="password" class="form-control" id="inputElectronicPassword" placeholder="Escreva a senha eletrônica da sua conta">
            <small id="electronicPasswordHelp" class="form-text text-muted">Sua senha só será utilizada para buscarmos as informações do Banco do Brasil</small>
        </div>
    </div>

    <button id="btn-submit" type="submit" class="btn btn-primary">Buscar os dados</button>
</form>

